---
layout: layout.njk
---

<div class="boxout italic">
	Reprinted from
	{% unless newsletter.hidden %}
	<a href="/newsletter/articles/#newsletter-{{ newsletter.number }}">
	{%- endunless -%}
	Newsletter {{ newsletter.number }}
	{%- unless newsletter.hidden -%}
	</a>
	{%- endunless -%}
	,
	dated {% if newsletter.displayDate %}{{ newsletter.displayDate }}{% else %}{{ newsletter.roughDate | date: "%Y %B" }}{% endif %}
</div>

<article>

{% include article-header with title: article.title, author: article.author %}

{{ content | safe }}

</article>

{% if similar.length > 0 %}

<nav class="boxout newsletter-contents" aria-labelled-by="related-articles-heading">
<h2 id="related-articles-heading">Related articles</h2>
<ul>
{% for ra in similar %}
<li>
{% include contents-entry with
	article: ra,
	newsletterNumber: ra.newsletterNumber,
	hidePage: true,
	hideWebOnly: true,
	showNewsletter: true,
%}
</li>
{% endfor %}
</ul>
</nav>

{% endif %}
